package ArraysAndAlgorithm;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class CaesarCipher_BatistaSilva {

    public static void main(String[] args) {
       
        File file = new File ("passwords.txt");
        String decrypted = "";
        
        System.out.println("***DECRYPTED***");
       
        try {
            Scanner input = new Scanner(file);
                                       
            while (input.hasNext()){
            String word = input.next();
            decrypted += decrypt(word, 5) + '\n';
            
            }
            input.close();
        } catch (FileNotFoundException fnf) {
            System.out.println(file + " not found");
        }
        
        System.out.println(decrypted);
    }
   
    public static String decrypt(String pass, int shift){
        char [] letters = "abcdefghijklmnopqrstuvwxyz".toCharArray();
        pass = pass.toLowerCase();
        int letterPos;
        char currentChar, newChar;
        int sub;
        String decryptedPassword = "";
              
        for (int i = 0; i < pass.length(); i++) {
            currentChar = pass.charAt(i);
            letterPos = String.valueOf(letters).indexOf(currentChar);
            sub = letterPos - shift;
                       
            if (sub < 0) {
                sub = 26 + sub;
            }
            newChar = String.valueOf(letters).charAt(sub);
            decryptedPassword += newChar;
        }
        return decryptedPassword;
    }
   
}
